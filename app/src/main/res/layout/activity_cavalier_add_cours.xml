<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/cours_scrollView">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_filter">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/tableLayoutDate">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="15sp"
                    android:id="@+id/textViewDate"
                    android:layout_column="0"
                    />

                <ImageButton
                    android:contentDescription="Calendrier"
                    android:id="@+id/selectDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:background="#00000000"
                    android:src="@drawable/calendar"

                    android:layout_gravity="bottom|left"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Heure"
                    android:textSize="15sp"
                    android:id="@+id/textViewHaure"
                    android:layout_column="0"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spHeure"
                    android:spinnerMode="dialog"
                    android:textSize="15sp"
                    android:layout_column="1"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tableLayoutDate">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monture"
                    android:textSize="15sp"
                    android:id="@+id/textView1"
                    android:layout_column="0"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spMonture"
                    android:spinnerMode="dialog"
                    android:textSize="15sp"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Cavalier"
                    android:textSize="15sp"
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spCavalier"
                    android:spinnerMode="dialog"
                    android:textSize="15sp"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moniteur"
                    android:textSize="15sp"
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spMoniteur"
                    android:spinnerMode="dialog"
                    android:textSize="15sp"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lieu"
                    android:textSize="15sp"
                    android:id="@+id/textView7"
                    android:layout_column="0"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spLieu"
                    android:spinnerMode="dialog"
                    android:textSize="15sp"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DurÃ©e (H)"
                    android:textSize="15sp"
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/editTextDuree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="15sp"
                    android:inputType="number"
                    android:layout_column="1"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayoutObs"
            android:layout_below="@+id/tableLayout">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Observations"
                    android:textSize="15sp"
                    android:id="@+id/textView8"
                    android:layout_below="@+id/tableLayout" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/editTextObservation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="15sp"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:layout_alignParentBottom="true" />
            </TableRow>

        </TableLayout>

    </RelativeLayout>
</ScrollView>