<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/item_personne">



    <TextView android:text="Date" android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:layout_marginLeft="5dp">
    </TextView>

    <TextView android:text="Cavalier" android:id="@+id/cavalier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:layout_marginLeft="100dp">
    </TextView>

    <TextView android:text="Monture" android:id="@+id/monture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:layout_marginLeft="200dp">
    </TextView>

    <ImageButton
        android:id="@+id/deleteCours"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="220dp"
        android:contentDescription="Supprimer"
        android:background="#00000000"
        android:src="@drawable/delete" />

</RelativeLayout>