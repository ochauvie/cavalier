<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_scrollView">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_filter">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/tableLayout">


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom"
                    android:textSize="20sp"
                    android:id="@+id/textView2"
                    android:layout_column="0" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/editTextNom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="20sp"
                    android:inputType="textCapWords" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Genre"
                    android:textSize="20sp"
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spGenre"
                    android:spinnerMode="dialog"
                    android:textSize="20sp"
                    android:layout_column="1"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Robe"
                    android:textSize="20sp"
                    android:id="@+id/textView5"
                    android:layout_column="0" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/editTextRobe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="20sp"
                    android:inputType="textCapWords" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Race"
                    android:textSize="20sp"
                    android:id="@+id/textView6"
                    android:layout_column="0" />

                <EditText
                    android:layout_marginTop="10dp"
                    android:id="@+id/editTextRace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textSize="20sp"
                    android:inputType="textCapWords" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Couleur"
                    android:textSize="20sp"
                    android:id="@+id/textView7"
                    android:layout_column="0" />

                <Button
                    android:layout_marginTop="6dp"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:text="Choisir"
                    android:id="@+id/colorPicker"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Photo"
                    android:textSize="20sp"
                    android:layout_column="0" />

                <ImageView android:id="@+id/cheval_pic"
                    android:contentDescription="Photo"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"/>
            </TableRow>

        </TableLayout>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CaractÃ©ristiques"
            android:textSize="20sp"
            android:id="@+id/textView8"
            android:layout_below="@+id/tableLayout" />


        <EditText
            android:layout_marginTop="10dp"
            android:id="@+id/editTextCaracteristique"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20sp"
            android:inputType="textMultiLine"
            android:layout_below="@+id/textView8"
            android:lines="2" />


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eventLayout"
            android:layout_below="@+id/editTextCaracteristique">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soins"
                    android:textSize="20sp"
                    android:id="@+id/textView9"
                    android:layout_column="0" />

                <ImageView android:id="@+id/event_add"
                    android:contentDescription="Ajouter"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/small_add"
                    android:layout_column="1"
                    android:baselineAlignBottom="false" />

            </TableRow>
        </TableLayout>

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_below="@+id/eventLayout">
        </ListView>


    </RelativeLayout>

</ScrollView>